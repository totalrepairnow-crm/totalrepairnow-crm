require('dotenv').config();
const express = require('express');
const app = express();

// Middlewares
app.use(express.json());
app.use(express.urlencoded({ extended: true }));

// Rutas
const clientsRoutes   = require('./routes/clients');
const authRoutes      = require('./routes/auth');
const servicesRoutes  = require('./routes/services');

app.use('/api/clients', clientsRoutes);
app.use('/api/auth', authRoutes);
// Servicios anidados bajo /api/clients
app.use('/api/clients', servicesRoutes);

// (Opcional) MÃ©tricas si existe el archivo
try {
  const metricsRoutes = require('./routes/metrics');
  app.use('/api/metrics', metricsRoutes);
} catch (_e) { /* ignore */ }

// Debug
app.post('/api/_debug_echo', (req, res) => {
  res.json({ headers: req.headers, body: req.body });
});

// Health
app.get('/api/health', (_req, res) => res.json({ status: 'ok' }));

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => console.log(`CRM backend running on port ${PORT}`));
